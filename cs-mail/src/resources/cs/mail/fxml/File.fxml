<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="500.0" prefWidth="1250.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.cs.mail.controller.file.FileController">
   <children>
      <HBox prefHeight="0.0" prefWidth="781.0">
         <children>
            <TextField fx:id="searchField" focusTraversable="false" prefHeight="23.0" prefWidth="319.0" promptText="검색어를 입력 하세요" />
            <Button defaultButton="true" mnemonicParsing="false" onAction="#setSearch" text="검색">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin></Button>
            <ComboBox fx:id="searchComboBox" prefWidth="100.0">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin></ComboBox>
            <CheckBox mnemonicParsing="false" text="현재 폴더 검색">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets top="3.0" />
               </HBox.margin>
            </CheckBox>
         </children>
         <VBox.margin>
            <Insets left="5.0" right="5.0" top="1.0" />
         </VBox.margin>
      </HBox>
      <SplitPane dividerPositions="0.15">
         <items>
            <AnchorPane prefHeight="999.0" prefWidth="199.0" SplitPane.resizableWithParent="false">
               <children>
                  <TreeView fx:id="pathTreeView" focusTraversable="false" prefHeight="999.0" prefWidth="243.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
            <AnchorPane>
               <children>
                  <SplitPane dividerPositions="0.4" orientation="VERTICAL" prefHeight="999.0" prefWidth="791.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <items>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="283.0" prefWidth="789.0">
                           <children>
                              <TableView fx:id="fileListView" focusTraversable="false" prefHeight="600.0" prefWidth="789.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                <columns>
                                    <TableColumn fx:id="fileAttachColumn" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" styleClass="tbl-alignCenter" text="파일첨부" />
                                    <TableColumn fx:id="fileFromColumn" maxWidth="400.0" minWidth="200.0" prefWidth="200.0" text="보낸사람" />
                                  	<TableColumn fx:id="fileNameColumn" minWidth="50.0" prefWidth="706.0" text="제목" />
                                    <TableColumn fx:id="fileDateColumn" maxWidth="300.0" minWidth="150.0" prefWidth="150.0" styleClass="tbl-alignCenter" text="날짜" />
                                    <TableColumn fx:id="fileSizeColumn" maxWidth="140.0" minWidth="70.0" prefWidth="70.0" styleClass="tbl-alignCenter" text="크기 (Byte)" />
                                </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                           </children>
                        </AnchorPane>
                      <AnchorPane minHeight="0.0" minWidth="0.0">
                           <children>
                              <TabPane fx:id="tabPane" prefWidth="999.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                           </children>
                        </AnchorPane>
                    </items>
                  </SplitPane>
               </children>
            </AnchorPane>
         </items>
      </SplitPane>
   </children>
</VBox>
